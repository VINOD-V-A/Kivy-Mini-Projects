<Button>
    font_size: 32

    background_color: (0,0,1,1)




<Colour>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
            font_size: 45
            background_color: (185/255,66/255,245/255,1)
            canvas.before:
                Color:
                    rgba:self.background_color
                Rectangle:
                    size: self.size
                    pos:self.pos
            # Text Properties
            color:(0,1,0,1)
            bold: True
            outline_color:(0,0,0)
            outline_width: 5
        TextInput:
            multiline: False

        Button:
            text: "Clear"
            background_color: (1,0,0,1)


